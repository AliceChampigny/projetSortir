
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Sorties Enitiennes!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('CSS/styles.css') }}">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <div class="logo">
                    <img src="{{ asset('img/logoSortie.png') }}">
                </div>
                {% if app.user %}
                    <div class="mb-3">
                        Bienvenu {{ app.user.pseudo }} !
                    </div>
                {% endif %}
                </div>
                {% block menu %}
                    <div >
                        <ul class="menu">


                            {% if not app.user %}
                            <li><a href="{{ path('main_accueil') }}">ACCUEIL</a></li>
                            <li><a href="{{ path('app_login') }}">SE CONNECTER</a></li>
                            <li><a href="{{ path('app_register') }}">S'INSCRIRE</a></li>
                            {% endif %}

                        {% if app.user %}
                            <li><a href="{{ path('participant_modifierprofil',{'id' :app.user.id}) }}">MON PROFIL</a></li>
                            <li><a href="{{ path('app_logout') }}">SE DECONNECTER</a></li>
                        {% endif %}

                            {% if  app.user %}
                                <li><a href="{{ path('sortie_ajouter') }}">Ajouter une sortie</a></li>
                            {% endif %}

                        </ul>
                    </div>
                {% endblock %}
            </nav>
        </header>
        {% for label, messages in app.flashes(['success', 'danger']) %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} text-center" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <main>
            <div>
                {% block body %}{% endblock %}
            </div>
        </main>
        <footer class="footer">
            <p>{{ 'now' | date("Y") }} ©Sorties Enitiennes</p>
        </footer>
    </body>
</html>

