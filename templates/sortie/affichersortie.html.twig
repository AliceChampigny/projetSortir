{% extends 'base.html.twig' %}
{% block title %}Détails de la sortie{% endblock %}


{% block body %}
    <div id="details_sortie">
        <ul >
            <li>Nom de la sortie : {{ sortie.nom }}</li>
            <li>Date et heure du début : {{ sortie.DateHeureDebut | date ("d/m/Y H:m") }}</li>
            <li>Date limite d'inscription : {{ sortie.DateLimiteInscription | date ("d/m/Y H:m") }}</li>
            <li>Nombre limite d'inscription : {{ sortie.NbInscriptionsMax }}</li>
            <li>Durée de la sortie : {{ sortie.duree }}</li>
            <li>Description : {{ sortie.InfosSortie }}</li>
            <li>Campus : {{ sortie.campus.nom }}</li>
            <li>Lieu : {{ sortie.lieu.nom }}</li>
            <li>Rue : {{ sortie.lieu.Rue }}</li>
            <li>Code postal : {{ sortie.lieu.ville.codePostal }}</li>
            <li>Latitude : {{ sortie.lieu.latitude }}</li>
            <li>Longitude : {{ sortie.lieu.longitude }}</li>
        </ul>
    </div>

    {% if sortie.etat.libelle != "Créée"  %}
        <div>
            <h3>Liste des participants</h3>
            <table id="liste_participants">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Nom complet</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    {% for participant in sortie.participants %}
                        <td><a href="{{ path('participant_afficherprofil', {'id': participant.id}) }}">{{ participant.pseudo }}</a></td>
                        <td> {{ participant.nom ~" "~participant.prenom }}</td>
                    {% endfor %}
                </tr>
                </tbody>
            </table>
        </div>
    {% endif %}

    <div id="buttons_insc_des">
        {% if  sortie.etat.libelle == "Ouverte" and  date() < date(sortie.dateLimiteInscription) and  sortie.participants | length < sortie.nbInscriptionsMax %}
            {% if sortie.participants.contains(app.user) %}
                <a href="{{ path('sortie_desistement',{'sortie' : sortie.id}) }}"><button>Se désister</button></a>
            {% else %}
                <a href="{{ path('sortie_inscription',{'sortie' : sortie.id}) }}"><button>S'inscrire</button></a>
            {% endif %}

        {% endif %}
    </div>

    <a href="{{ path('sortie_liste') }}"><button>Retour</button></a>

{% endblock %}


