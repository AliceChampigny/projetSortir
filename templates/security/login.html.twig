
{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        <section class="section_form">
            <h1 class="h3 mb-3 font-weight-normal">Please LogIn</h1>
            {#    <label for="inputPseudo">Pseudo</label>#}
            {#    <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control" autocomplete="username" required autofocus>#}
            {#    <label for="inputPassword">Password</label>#}
            {#    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>#}

{#            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">#}

            {#    <button class="btn btn-lg btn-primary" type="submit">Sign in</button>#}
    </form>
    <main>

        <section class="section_form">
            <form method="post" id="consultation-form" class="feed-form" action="#">
                <input required="" name="email" placeholder="Email" type="text" value="{{ last_username }}">

                <input name="password" required="" placeholder="Password" type="password">
                <button type="submit" class="button_submit">LOGIN</button>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </form>
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvenir de moi

                </label>
            </div>
        </section>
    </main>
{% endblock %}